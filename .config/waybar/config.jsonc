{
    "position":"top",
    "margin-top": 1,


    "modules-left" : [

        "network#speed",
        "custom/cava"],
    "modules-center":["hyprland/workspaces"],
    "modules-right":[
        "tray",
        "clock",
        "pulseaudio",
        "backlight",
        "battery",
        "custom/notification"
